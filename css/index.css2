/*屏幕控制*/
  @media screen{

		@media (min-device-width:1078px){
            input:focus,textarea:focus {
			   font-size: 18px !important;
			   }
		}


		@media (min-device-width : 320px) and (max-device-width : 1077px){
            input:focus,textarea:focus {
			   font-size: 16px !important;
			   }
		}
	}

